  margin-top: 0px;
}
.courseLogo{
    width: 400rpx;
    height: 132rpx;
    float: left;
    left: 0;
    margin-left: -210rpx;
    margin-bottom: 10rpx;
    position: relative;
    box-sizing: border-box;
    perspective: 800px;
}

.courseBefore{
    width: 100%;
    height: 100%;
    position: absolute;
    border-radius:3px;
    top:0;
    left: 0;
    margin-left: -5rpx;
    background-repeat: no-repeat;
    background-position: center center;
     backface-visibility: hidden; 
    transition: 0.5s;
    background-color: pink;

}
.courseAfter{
    width: 100%;
    height: 100%;
    position: absolute;
    border-radius:3px;
    top:0;
    left: 0;
    color: #fff;
    background-color: dodgerblue;
    font-size: 100rpx;
    text-align: center;
    transform: rotateY(-360deg); 
     backface-visibility: hidden;  
    transition: 0.5s; 

}
.courseLogo:hover .courseBefore{
    transform: rotateY(0deg);
}
.courseLogo:hover .courseAfter{
    transform: rotateY(360deg);
}

.content{
  display:flex;
  flex-direction:column;
