.header-container {
  display: flex;
  flex-direction: column;
  height: 300rpx;
  background-color: #78968B;
  align-items: center;
  justify-content: center;
}

.header-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.header-nickname {
  color: #FFF;
  font-size: 30rpx;
}

.item-container {
  display: flex;
  flex-direction: row;
  background-color: #FFF;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  padding-left: 25rpx;
  align-items: center;
}

.item-icon {
  height: 54rpx;
  width: 54rpx;
}

.item-label {
  flex: 1;
  font-size: 32rpx;
  color: #000;
  margin-left: 25rpx;
}

.item-detail-label {
  display: flex;
  font-size: 30rpx;
  color: #000;
  margin-left: 50rpx;
  margin-bottom: 20rpx;
  margin-right: 20rpx;
}

.map {
  width: 100%;
  height: 300rpx;
  padding-top: 20rpx;
}

.container{
  padding: 0;
  font-size: 14rpx;
  color: #000;
}
.container .feed-item-class{
  width: 690rpx;
  padding: 30rpx 30rpx 20rpx;
  margin: 7rpx 0 6rpx 0;
  background: #ffffff;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  box-shadow: 0 2px 5px #eeeeee;
}

.container .feed-item-2{
  width: 690rpx;
  padding: 30rpx 30rpx 20rpx;
  margin: 0rpx 0 0rpx 0;
  background: #ffffff;
  border-top: 0px solid #eee;
  border-bottom: 0px solid #eee;
  box-shadow: 0 2px 5px #eeeeee;
}

.container .feed-item-class .feed-source{
  width: 690rpx;
  left: 0;
  height: 50rpx;
}
.container .feed-item-class .feed-source .avatar{
  position: relative;
  display: inline-block;
}
.container .feed-item-class .feed-source a{
  display: inline-block;
  height: 40rpx;
}
.container .feed-item-class .feed-source .avatar image{
  /*position: absolute;*/
  display: inline-block;
  width: 45rpx;
  height: 45rpx;
  border-radius: 45rpx;
  top: 10rpx;
  vertical-align: middle;
}
.container .feed-item-class .feed-source text{
  /*position: absolute;*/
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  vertical-align: middle;
  margin: 0 0 0 15rpx;
  font-size: 26rpx;
}
.container .feed-item-class .feed-source .item-more{
  display: inline-block;
  width: 40rpx;
  height: 45rpx;
}
.container .feed-item-class .feed-content{
  padding: 10rpx 0 0 0;
}
.container .feed-item-class .feed-content .question text{
  font-size: 24rpx;
  font-weight: 600px;
  line-height: 40rpx;
  color: #a0acac;
}

.container .feed-item-class .feed-content .question .item-label3 {
  font-size: 24rpx;
  color: #000;
  position: absolute;
  margin-right: 10rpx;
}