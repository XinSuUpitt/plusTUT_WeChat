  width: 750rpx;
  height: 100rpx;
  background: #ff9933;
  color: #ffb366;
  font-size: 28rpx;
  line-height: 100rpx;
  box-shadow: 0 2px 2px #ffcc99;
  margin: 0 0 8rpx 0;
  z-index: 9999;
}

.toptab.active{
  color: #ffffff;
  border-bottom: solid 2px #ffffff;
}
.activity{
  width: 750rpx;
  height: 375rpx;
}
.activity image{
  width: 750rpx;
  height: 375rpx;
}
.placehold{
  font-size: 28rpx;
  padding: 80rpx 0;
}/* pages/categary/categary.wxss */

.container{
  padding: 0;
  font-size: 14rpx;
  color: #000;
}
.container .feed-item-class{
  width: 690rpx;
  padding: 30rpx 30rpx 20rpx;
  margin: 7rpx 0 6rpx 0;
  background: #ffffff;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  box-shadow: 0 2px 5px #eeeeee;
}

.container .feed-item-2{
  width: 690rpx;
  padding: 30rpx 30rpx 20rpx;
  margin: 0rpx 0 0rpx 0;
  background: #ffffff;
  border-top: 0px solid #eee;
  border-bottom: 0px solid #eee;
  box-shadow: 0 2px 5px #eeeeee;
}

.container .feed-item-class .feed-source{
  width: 690rpx;
  left: 0;
  height: 50rpx;
}
.container .feed-item-class .feed-source .avatar{
  position: relative;
  display: inline-block;
}
.container .feed-item-class .feed-source a{
  display: inline-block;
  height: 40rpx;
}
.container .feed-item-class .feed-source .avatar image{
  /*position: absolute;*/
  display: inline-block;
  width: 45rpx;
  height: 45rpx;
  border-radius: 45rpx;
  top: 10rpx;
  vertical-align: middle;
}
.container .feed-item-class .feed-source text{
  /*position: absolute;*/
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  vertical-align: middle;
  margin: 0 0 0 15rpx;
  font-size: 26rpx;
}
.container .feed-item-class .feed-source .item-more{
  display: inline-block;
  width: 40rpx;
  height: 45rpx;
}
.container .feed-item-class .feed-content{
  padding: 10rpx 0 0 0;
}
.container .feed-item-class .feed-content .question text{
  font-size: 24rpx;
  font-weight: 600px;
  line-height: 40rpx;
  color: #a0acac;
}

.container .feed-item-class .feed-content .question .item-label3 {
  font-size: 24rpx;
  color: #000;
  position: absolute;
  margin-right: 10rpx;
}